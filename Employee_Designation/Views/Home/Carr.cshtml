
@{
    Layout = null;
}

<!DOCTYPE html>

<html ng-app="myModule">
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Carr</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/css/bootstrap.min.css" rel="stylesheet">
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/js/bootstrap.bundle.min.js"></script>

    <script src="https://ajax.googleapis.com/ajax/libs/angularjs/1.8.2/angular.min.js"></script>


    @*----------------------------------angucomplete--------------------------------*@

    <link href="~/Angular/AnguComplete/angucomplete.css" rel="stylesheet" />
    <link href="~/Angular/AnguComplete/angucomplete-alt.css" rel="stylesheet" />
    <script src="~/Angular/AnguComplete/angucomplete-alt.min.js"></script>

    @*----------------------------------angucomplete--------------------------------*@

    <style>
        .container {
            margin-top: 50px;
            margin-left: 190px;
        }

        table {
            margin-top: 50px;
        }

        .box {
            background-color: #cdfcef;
            border: 1px solid black;
        }

        form {
            margin-top: 40px;
        }
    </style>
</head>
<body ng-controller="myController">

    <div class="container mt-3 col-sm-6">

        <div class="card bg-info text-white">
            <div class="card-body">Registration form</div>
        </div>


        <form name="carrForm" novalidate>

            <div class=""></div>

            <div class="mb-3 form-group">
                <label class="control-label col-sm-4">BrandName<span class="text-danger">*</span> </label>
                <div class="col-sm-6">
                    <input type="text" class="form-control" placeholder="Brand Name" name="brandName" ng-model="carr.BrandName" required>
                </div>
                <span class="text-danger">BrandName is Required</span>
            </div>
            <div class="mb-3 form-group">
                <label class="control-label col-sm-4">ModelName<span class="text-danger">*</span> </label>
                <div class="col-sm-6">
                    <input type="text" class="form-control" placeholder="ModelName" name="modelName" ng-model="carr.ModelName" required>
                </div>
                <span class="text-danger">Model Name is Required</span>
            </div>
            <div class="mb-3 form-group">
                <label class="control-label col-sm-4">Year<span class="text-danger">*</span> </label>
                <div class="col-sm-6">
                    <input type="text" class="form-control" placeholder="Year" name="year" ng-model="carr.Year" required>
                </div>
                <span class="text-danger">year is Required</span>
            </div>


            <div class="mb-3 form-group">
                <label class="control-label col-sm-4">Price<span class="text-danger">*</span> </label>
                <div class="col-sm-6">
                    <input type="text" class="form-control" placeholder="Price" name="price" ng-model="carr.Price" required>
                </div>
                <span class="text-danger">Price is Required</span>
            </div>


            <div class="mb-3 form-group">
                <label class="control-label col-sm-4">New<span class="text-danger">*</span> </label>
                <div class="col-sm-6">
                    <input type="text" class="form-control" placeholder="New" name="new" ng-model="carr.New" required>
                </div>
                <span class="text-danger">New is Required</span>
            </div>



            <button class="btn btn-success" ng-click="Savecar()">Submit</button>

            <button class="btn btn-primary" ng-click="Updatecar()">Update</button>
        </form>


    </div>


    <div class="container">
        <angucomplete-alt id="anguPatient"
                          Placeholder="Search Car"
                          selected-object="SelectedCar"
                          Search-fields="BrandName"
                          local-data="carList"
                          minlength="1"
                          title-field="BrandName"
                          match-class="highlight"
                          input-class="form-control"
                          class="ng-isolate-scope" name="SupplyId">

        </angucomplete-alt>

    </div>

    <div class="container tbl">


        <div class="col-sm-10">

            <table class="table table-bordered" style="text-align:center;">

                <tr class="info">
                    <th>Carsid</th>
                    <th>BrandName</th>
                    <th>ModelName</th>
                    <th>Year</th>
                    <th>Price</th>
                    <th>New</th>
                    <th>Edit</th>
                    <th>Delete</th>
                </tr>

                <tr ng-repeat="Lap in carList">
                    <td> {{ Lap.Carsid }} </td>
                    <td> {{ Lap.BrandName }} </td>
                    <td> {{ Lap.ModelName }} </td>
                    <td> {{ Lap.Year }} </td>
                    <td> {{ Lap.Price }} </td>
                    <td> {{ Lap.New }} </td>
                    <td> <button class="btn btn-primary" ng-click="edit(Lap)">Edit</button></td>
                    <td> <button class="btn btn-primary" ng-click="DeleteConfirmation(Lap.Carsid)">Delete</button></td>
                </tr>
            </table>
        </div>




    </div>

    <script src="~/Angular/car.js"></script>

  


</body>


</html>



